test elim use bool can reduce 1 [[
data MyBool =
	MyFalse : MyBool,
	MyTrue : MyBool;
postulate f : (_: Type -> Type);
postulate x : f ((elim MyBool) (\_: MyBool. Type) Type Bool MyFalse);
x
]] 0 errors

